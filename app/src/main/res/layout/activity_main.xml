<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicial"
    tools:context=".Controllers.MainActivity">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="312dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#E00D0D"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="344dp"
        android:layout_height="54dp"
        android:layout_marginTop="232dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#E00D0D"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lista"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/voscuro"
        android:text="Ir a la lista"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="492dp"
        android:backgroundTint="@color/voscuro"
        android:text="Ir al login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_inicio"
        android:layout_width="222dp"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imageOjo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ojo" />

</androidx.constraintlayout.widget.ConstraintLayout>